{
  "name": "steam-hours-farmer",
  "version": "0.5.0",
  "description": "Utility to farm Steam hours via Node.js",
  "type": "module",
  "main": "src/core.ts",
  "scripts": {
    "start": "ts-node src/core.ts",
    "start:dev": "nodemon -I --exec node --experimental-specifier-resolution=node  --loader ts-node/esm .\\src\\core.ts",
    "start:prod": "node dist/core.js",
    "build": "tsc",
    "watch": "tsc -w",
    "pull": "git pull && yarn && echo Done!"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xapu1337/steam-idle-farmer.git"
  },
  "keywords": [
    "steam",
    "farmer",
    "automation"
  ],
  "author": "Xapu1337",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Xapu1337/steam-idle-farmer/issues"
  },
  "homepage": "https://github.com/Xapu1337/steam-idle-farmer#readme",
  "dependencies": {
    "@discordjs/collection": "^1.3.0",
    "@types/steam-user": "^4.26.0",
    "chalk": "^4.1.2",
    "consola": "^2.15.3",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "enquirer": "^2.3.6",
    "klaw": "^4.0.1",
    "nodemon": "^2.0.20",
    "steam-user": "^4.26.0",
    "table": "^6.8.1",
    "ts-node-esm": "^0.0.6",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/node": "^18.11.13",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
